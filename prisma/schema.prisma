
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  email String @unique
  password String
  status UserStatus @default(PENDING_ONBOARDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  profile Profile?
  swipesMade Swipes[] @relation("Swiper")
  SwipesRecieved Swipes[] @relation("Swiped")
  matchesAsUser1 Matches[] @relation("User1Matches")
  matchesAsUser2 Matches[] @relation("User2Matches")

}

model Profile{
  id String @id @default(uuid())
  name        String
  bio         String?
  age         Int?
  gender      String?
  photo      String?
  github      String?
  portfolio   String?
  location    String?
  skills      String[]

  userId String @unique

  user User @relation(fields: [userId], references: [id])
}

enum UserStatus{
  PENDING_ONBOARDING
  ACTIVE
  SUSPENDED
}


model Swipes{
	id String @id @default(uuid())
	swiperUserId String 
	swipedUserId String 
	action SwipeAction
	status SwipeStatus
	createdAt DateTime @default(now())
	updatedAt DateTime @default(now())
	
	swiper User @relation("Swiper",fields: [swiperUserId], references:[id])
	swiped User @relation("Swiped",fields: [swipedUserId], references:[id])
	
	@@unique([swipedUserId, swiperUserId])
}

enum SwipeAction{
	RIGHT
	LEFT
}

enum SwipeStatus{
	PENDING
	ACCEPTED
	REJECTED
	IGNORED
}

model Matches{
  id String @id @default(uuid())
  user1Id String
  user2Id String
  matchedAt DateTime @default(now())

  user1 User @relation("User1Matches", fields: [user1Id], references: [id])
  user2 User @relation("User2Matches", fields: [user2Id], references: [id])

  @@unique([user1Id,user2Id])
}
