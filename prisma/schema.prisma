
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  email String @unique
  password String
  status UserStatus @default(PENDING_ONBOARDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  profile Profile?
  swipesMade Swipes[] @relation("Swiper")
  SwipesRecieved Swipes[] @relation("Swiped")
}

model Profile{
  id String @id @default(uuid())
  name        String
  bio         String?
  age         Int?
  gender      String?
  photo      String?
  github      String?
  portfolio   String?
  location    String?
  skills      String[]

  userId String @unique

  user User @relation(fields: [userId], references: [id])
}

enum UserStatus{
  PENDING_ONBOARDING
  ACTIVE
  SUSPENDED
}


model Swipes{
	id String @id @default(uuid())
	swiperUserId String @unique() @db.Uuid
	swipedUserId String @unique() @db.Uuid
	action SwipeAction
	status SwipeStatus
	createdAt DateTime @default(now())
	updatedAt DateTime @default(now())
	
	swiper User @relation("Swiper",fields: [swiperUserId], references:[id])
	swiped User @relation("Swiped",fields: [swipedUserId], references:[id])
	
	@@unique([swipedUserId, swiperUserId])
}

enum SwipeAction{
	RIGHT
	LEFT
}

enum SwipeStatus{
	PENDING
	ACCEPTED
	REJECTED
	IGNORED
}
